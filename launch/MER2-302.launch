<launch>
    <!-- Ensure stdout/stderr is captured as galaxy_camera-*.log -->
    <node name="galaxy_camera" pkg="galaxy_camera" type="galaxy_camera" output="log">
        <param name="image_width" value="4096"/>
        <param name="image_height" value="3000"/>
        <!-- <param name="image_width" value="1920"/>
        <param name="image_height" value="1080"/> -->
        <param name="pixel_format" value="bgr8"/>
        <param name="camera_info_url" value=""/>
        <param name="camera_frame_id" value="camera"/>
        <param name="camera_ip" value="192.168.40.11"/>
        

        <!-- Exposure -->
        <param name="exposure_auto" value="true"/>
        <!-- <param name="exposure_value" value="20000"/>
        <param name="exposure_min" value="20"/>
        <param name="exposure_max" value="1000000"/> -->

        <!-- Gain -->
        <param name="gain_auto" value="true"/>
        <!-- <param name="gain_value" value="15"/>
        <param name="gain_min" value="0"/>
        <param name="gain_max" value="24"/> -->

        <!-- Frame rate -->
        <param name="frame_rate" value="5"/>

        <!-- White balance -->
        <param name="white_auto" value="true"/>
        <!-- 0, 1, 2 for red, green, blue-->

        <!-- Network parameters -->
        <!-- GigE Vision packet size (576-9000 bytes, default 1500 for standard Ethernet) -->
        <!-- WARNING: MER2-302 camera only supports MTU 1500, DO NOT use jumbo frames -->
        <param name="gev_packet_size" value="1500"/>
        
        <!-- Inter-packet delay in microseconds (0-50000, default 5000) -->
        <!-- Higher values reduce network congestion but slow down transmission -->
        <param name="gev_packet_delay_us" value="5000"/>
        
        <!-- Timeout values in milliseconds -->
        <param name="gev_resend_timeout_ms" value="500"/>
        <param name="gev_packet_timeout_ms" value="100"/>
        <param name="gev_block_timeout_ms" value="500"/>
        
        <!-- Socket buffer size in KB (default 8192) -->
        <param name="gev_socket_buffer_kb" value="8192"/>
    </node>
</launch>
